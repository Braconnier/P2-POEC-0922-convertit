{# Navigation entre les pages #}
<div class="row">
	{% if pages > 1 %}
		<nav aria-label="...">
			<ul class="pagination justify-content-center my-5">
				{% if (page > 1) %}
					<li class="page-item">
						<a class="page-link" href={{path(pathRedirection,{page: (page - 1)} )}}>&lt;</a>
					</li>
				{% endif %}
				{% for currentPage in prevPages %}
					{% if currentPage > 0 %}
						<li class="page-item {{ (currentPage == page) ? 'active' : " " }}">
							<a class="page-link" href={{path(pathRedirection, {page: currentPage} )}}>{{currentPage}}</a>
						</li>
					{% endif %}
				{% endfor %}
				{% for currentPage in nextPages %}
					{% if currentPage <= latest %}
						<li class="page-item {{ (currentPage == page) ? 'active' : " " }}">
							<a class="page-link" href={{path(pathRedirection, {page: currentPage} )}}>{{currentPage}}</a>
						</li>
					{% endif %}
				{% endfor %}
				{% if (page < latest) %}
					<li class="page-item">
						<a class="page-link" href={{path(pathRedirection, {page : (page + 1)} )}}>&gt;</a>
					</li>
				{% endif %}
			</ul>
		</nav>
	{% endif %}
</div>
