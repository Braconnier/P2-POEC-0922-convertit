{% extends 'base.html.twig' %}
{% block title %}
	{{parent()}}
	- images de
	{{'users'}}
{% endblock %}

{% block body %}
	{# //Gallerie des images dans le profil de l'utilisateur #}
	<div class="container mb-5">
		<section>
			<h1 class="text-center my-5">{{user.pseudo}}</h1>
			{# <pre>
																																		{{ dump(user) }}
																																	</pre> #}
			<img src="{{ asset( user.profilePicture ?? 'files/profile/default.png' ) }}" style="width: 18rem" alt="{{picture.tag ?? ""}}">
			<h4>Ma Biographie</h4>
			<p>{{user.bio}}</p>
		</section>
		<section>
			<h4 class="my-5">Ma Galerie</h4>
			<div class="row row-cols-2 row-cols-lg-4 g-2 g-lg-3">
				{% if user.pictures %}
					{% for picture in user.pictures %}
						{# <pre>
																																																																																																																																																																																																																																																					{{ dump(picture) }}
																																																																																																																																																																																																																																																					</pre> #}
						<div class="col">
							<div class="card" style="width: 18rem">
								<img src="{{picturesPath ?? ""}}{{picture.name ?? ""}}" style="width: 18rem" alt="{{picture.tag ?? ""}}" class="rounded mx-auto d-block">
								<div class="card-body bg-info">
									<h5 class="card-title">{{picture.tag ?? ""}}</h5>
									<p class="card-text">{{picture.description ?? ""}}</p>
									{# <a href="#" class="btn btn-primary">Go somewhere</a> #}
								</div>
							</div>
						</div>

					{% endfor %}
				{% endif %}
			</div>
		</section>
	</div>
{% endblock %}
